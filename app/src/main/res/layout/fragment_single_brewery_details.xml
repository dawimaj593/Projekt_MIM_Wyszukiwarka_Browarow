<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Model.View.SingleBreweryDetails"
    android:orientation="vertical">

    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/brewery_name_details_textview"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_margin="10dp"
        android:layout_weight="4"
        android:background="@drawable/rounded_button"
        android:backgroundTint="@color/grey"
        android:fontFamily="@font/alata"
        android:gravity="center"
        android:textColor="@color/white"
        android:textSize="20dp" />

    <TextView
        android:id="@+id/brewery_city_and_state_details_textview"
        android:layout_width="match_parent"
        android:layout_weight="2"
        android:layout_height="0dp"
        android:layout_margin="10dp"
        android:background="@drawable/rounded_button"
        android:backgroundTint="@color/grey"
        android:fontFamily="@font/alata"
        android:gravity="center"
        android:textColor="@color/white"
        android:textSize="20dp"/>

    <TextView
        android:id="@+id/brewery_address_details_textview"
        android:layout_width="match_parent"
        android:layout_weight="2"
        android:layout_height="0dp"
        android:layout_margin="10dp"
        android:background="@drawable/rounded_button"
        android:backgroundTint="@color/grey"
        android:fontFamily="@font/alata"
        android:gravity="center"
        android:textColor="@color/white"
        android:textSize="20dp"/>

    <TextView
        android:id="@+id/brewery_type_details_textview"
        android:layout_width="match_parent"
        android:layout_weight="2"
        android:layout_height="0dp"
        android:layout_margin="10dp"
        android:background="@drawable/rounded_button"
        android:backgroundTint="@color/grey"
        android:fontFamily="@font/alata"
        android:gravity="center"
        android:textColor="@color/white"
        android:textSize="20dp"/>

    <TextView
        android:id="@+id/brewery_phone_details_textview"
        android:layout_width="match_parent"
        android:layout_weight="2"
        android:layout_height="0dp"
        android:layout_margin="10dp"
        android:background="@drawable/rounded_button"
        android:backgroundTint="@color/grey"
        android:fontFamily="@font/alata"
        android:gravity="center"
        android:textColor="@color/white"
        android:textSize="20dp"/>

    <TextView
        android:id="@+id/brewery_http_details_textview"
        android:layout_width="match_parent"
        android:layout_weight="2"
        android:layout_height="0dp"
        android:layout_margin="10dp"
        android:background="@drawable/rounded_button"
        android:backgroundTint="@color/grey"
        android:fontFamily="@font/alata"
        android:gravity="center"
        android:textColor="@color/white"
        android:textSize="20dp"/>

</LinearLayout>